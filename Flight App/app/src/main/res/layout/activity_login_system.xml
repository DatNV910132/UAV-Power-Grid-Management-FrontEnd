<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="15dp"
    tools:context=".ui.activity.login.LoginSystemActivity"
    >
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/elec"
        android:layout_below="@id/tv_login"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/elec"
        android:paddingBottom="30dp"
        />
    <LinearLayout
        android:layout_below="@id/elec"
        android:id="@+id/sys_login_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản:"
            android:textSize="20dp"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/edt_sys_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tài khoản"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sys_login_linear2"
        android:layout_below="@id/sys_login_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu:"
            android:textSize="20dp"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/edt_sys_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_status_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sys_login_linear2"
        android:textSize="13dp"
        android:textColor="#FF0000"
        />
    <Button
        android:id="@+id/btn_sys_login"
        android:layout_below="@id/tv_status_login"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        style="@style/button_style"
        />
    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên tài khoản / mật khẩu ?"
        android:layout_below="@id/btn_sys_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="#8B003AB8"
        />
</RelativeLayout>