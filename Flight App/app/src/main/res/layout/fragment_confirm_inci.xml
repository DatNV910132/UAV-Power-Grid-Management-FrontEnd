<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Xác nhận sự cố"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Button
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/btn_confinci_delete"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/round_btn_delete"
        android:text="Xóa"
        android:textAllCaps="false"
        android:textColor="@color/common_text_color"
        android:textSize="17dp" />
</LinearLayout>


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photoview_confinci_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sự cố:"
            android:textColor="#000000"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edt_confinci_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Nhập tên của sự cố"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả sự cố:"
            android:textColor="#000000"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edt_confinci_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Mô tả về sự cố"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày tháng:"
            android:textColor="#000000"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edt_confinci_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="DD-MM-YYYY"
            android:inputType="date"
            android:textColor="#000000"
            android:textSize="17dp"
            android:enabled="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Độ nghiêm trọng:"
            android:textColor="#000000"
            android:textSize="17dp" />

        <Spinner
            android:id="@+id/sp_confinci_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_detailinci_level"
            android:textColor="#000000"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người sửa:"
            android:textColor="#000000"
            android:textSize="17dp" />

        <Spinner
            android:id="@+id/sp_confinci_idfix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="17dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_addinci_addstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="10dp"
        android:textColor="#FF0000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        >

        <Button
            android:id="@+id/btn_confinci_save"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:background="@drawable/round_btn"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="@color/common_text_color"
            android:textSize="17dp" />

        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/btn_confinci_cancel"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:background="@drawable/round_btn"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="@color/common_text_color"
            android:textSize="17dp" />
    </LinearLayout>



</LinearLayout>